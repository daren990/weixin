/* pages/demo1/one1.wxss */
page{
    height: 100%;
}
.scrheight{
    display: block;
    width: 100%;
    height: 93%;
    margin-right: 20px;
    background:#ebebeb;
}
.left-view{
    float: left;
}
.right-view{
    float: right;
}
.left-img{
    margin-right: 6rpx;
}
.right-img{
    margin-left: 6rpx;
}
.triangle{
    margin-top: 42rpx;
    width: 0;
    height: 0;
    border-top: 4px solid transparent;
    border-bottom: 4px solid transparent;
}
.left-Triangle{
    border-right:  6px solid #fff;
}
.right-Triangle{
    border-left: 6px solid #5bcd20;
}
.message{
    margin-top: 24rpx;
    border-radius: 6rpx;
    font-size: 14px;
    letter-spacing: 1px;
    max-width: 80%;
    padding: 10rpx;
}
.left-message{
    background: #fff;
}
.right-message{
    background: #5bcd20;
}
.wa-row{
    background:#f5f5f7;
    overflow-x: hidden;
    height:7%;
    width: 100%;
}
.wa-row view{
    height: 100%;
}
.imageStyle{
    width: 50rpx;
    height: 50rpx;
    margin-top: 14rpx;
}
.auido{
    margin-left: 20rpx;
}
.text-view{
    width: 60%;
    margin-left: 12rpx;
}
.textStyle{
    border: 1rpx solid #ccc;
    background:#fcfcfc;
    border-radius:4px;
    padding-left: 6px;
    height:70%;
    width: 100%;
    line-height: 100%;
    margin-top: 10rpx;
    font-family:microsoft yahei;
    font-size:14px;
}
.add_biaoqing{
    margin-left: 18px;
}
.right-view{
    height: 100%;
}
.add_value{
    width: 130rpx;
    height: 100%;
    line-height: 100%;
    text-align: center;
}
.btn{
    width: 80%;
    height: 50rpx;
    line-height: 50rpx;
    margin-top: 14rpx;
    font-size: 0.52rem;
    letter-spacing: 2px;
    margin-right: 8px;
}